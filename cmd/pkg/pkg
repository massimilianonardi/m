#!/bin/sh

. env.lib.sh

#-------------------------------------------------------------------------------

run()
{
  true
}

#-------------------------------------------------------------------------------

PKG_COMMAND="$1"
shift

PKG_NAME="$1"
shift

PKG_VER="$1"
shift

if [ -z "$PKG_COMMAND" ] || [ -z "$PKG_NAME" ]
then
  echo "some args are null, required: pkg-command, pkg-name, pkg-ver, pkg-inst-dir, pkg-inst-conf-dir, symlinks-dir"
  exit 1
fi

case "$PKG_COMMAND" in
  "run") true;;
  *) exit 1;;
esac

"$PKG_COMMAND"
