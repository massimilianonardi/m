#!/bin/sh

#-------------------------------------------------------------------------------

contains()
(
  [ "$#" -le "1" ] && exit 1
  
  if [ "$#" -eq "2" ]
  then
    if [ "$1" = "$2" ]
    then
      exit 0
    else
      set -- "$1" $2
    fi
  fi
  
  WORD="$1"
  shift
  
  for k in "$@"
  do
    [ "$k" = "$WORD" ] && exit 0
  done
  
  exit 1
)

#-------------------------------------------------------------------------------
