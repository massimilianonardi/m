#!/bin/sh

#-------------------------------------------------------------------------------

is_integer()
{
  [ "$1" -eq "$1" ] 2>/dev/null
}

#-------------------------------------------------------------------------------

is_char_in_word()
{
  [ "$2" != "${2#*${1}}" ] 2>/dev/null
}

#-------------------------------------------------------------------------------

is_word_in_list()
(
  WORD="$1"
  LIST=" $2 "
  [ "$LIST" != "${LIST#* ${WORD} }" ] 2>/dev/null
)

#-------------------------------------------------------------------------------
