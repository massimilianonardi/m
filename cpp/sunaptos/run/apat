#!/bin/sh

USERROOT="$(dirname "$0")"
USERROOT="$(readlink -m "$USERROOT")"
USERHOME="$USERROOT/home"
USERCFG="$USERROOT/cfg"
USERLOG="$USERROOT/log"
USERTMP="$USERROOT/tmp"

APPLICATION_NAME=postgres
portable "$PORTABLE_DIR/$APPLICATION_NAME/commands" -b "$BIN_DIR" -h "$USERHOME/$APPLICATION_NAME" -c "$USERCFG/$APPLICATION_NAME" -l "$USERLOG/$APPLICATION_NAME" -t "$USERTMP/$APPLICATION_NAME" start
APPLICATION_NAME=pgadmin
portable "$PORTABLE_DIR/$APPLICATION_NAME/commands" -b "$BIN_DIR" -h "$USERHOME/$APPLICATION_NAME" -c "$USERCFG/$APPLICATION_NAME" -l "$USERLOG/$APPLICATION_NAME" -t "$USERTMP/$APPLICATION_NAME" run
APPLICATION_NAME=tomcat
portable "$PORTABLE_DIR/$APPLICATION_NAME/commands" -b "$BIN_DIR" -h "$USERHOME/$APPLICATION_NAME" -c "$USERCFG/$APPLICATION_NAME" -l "$USERLOG/$APPLICATION_NAME" -t "$USERTMP/$APPLICATION_NAME" start
APPLICATION_NAME=apache
portable "$PORTABLE_DIR/$APPLICATION_NAME/commands" -b "$BIN_DIR" -h "$USERHOME/$APPLICATION_NAME" -c "$USERCFG/$APPLICATION_NAME" -l "$USERLOG/$APPLICATION_NAME" -t "$USERTMP/$APPLICATION_NAME" run
APPLICATION_NAME=tomcat
portable "$PORTABLE_DIR/$APPLICATION_NAME/commands" -b "$BIN_DIR" -h "$USERHOME/$APPLICATION_NAME" -c "$USERCFG/$APPLICATION_NAME" -l "$USERLOG/$APPLICATION_NAME" -t "$USERTMP/$APPLICATION_NAME" stop
APPLICATION_NAME=postgres
portable "$PORTABLE_DIR/$APPLICATION_NAME/commands" -b "$BIN_DIR" -h "$USERHOME/$APPLICATION_NAME" -c "$USERCFG/$APPLICATION_NAME" -l "$USERLOG/$APPLICATION_NAME" -t "$USERTMP/$APPLICATION_NAME" stop
